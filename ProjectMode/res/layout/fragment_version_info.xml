<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_product_model"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_model"
        android:textColor="@color/white"
        android:textSize="24sp"
        />
    
    <TextView
        android:id="@+id/tv_android_version"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/android_version"
        android:textColor="@color/text_color"
        />
    
    <TextView
        android:id="@+id/tv_mcu_version"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/mcu_version"
        android:textColor="@color/text_color"
        />
    
    <TextView
        android:id="@+id/tv_arm_version"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/arm_version"
        android:textColor="@color/text_color"
        />
    
    <TextView
        android:id="@+id/tv_map_version"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/map_version"
        android:textColor="@color/text_color"
        />
    
    <TextView
        android:id="@+id/tv_bluetooth_version"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/bluetooth_version"
        android:textColor="@color/text_color"
        />
    
    <TextView
        android:id="@+id/tv_sound_version"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/sound_version"
        android:textColor="@color/text_color"
        />
    
</LinearLayout>
