<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_adb_debug"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adb_debug"
        android:textColor="@color/white"
        android:textSize="24sp"
        />
    
    <TextView
        android:id="@+id/tv_system_logs"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/system_logs"
        android:textColor="@color/text_color"
        />
    
    <TextView
        android:id="@+id/tv_tbox_logs"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/tbox_logs"
        android:textColor="@color/text_color"
        />
    
    <TextView
        android:id="@+id/tv_gps_logs"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/gps_logs"
        android:textColor="@color/text_color"
        />
    
</LinearLayout>
