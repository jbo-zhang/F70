<resources>


        <style name="MyTheme" parent="android:Theme.NoTitleBar">
    	</style>
    
        
        <!-- 底部返回键的风格 -->
    <style name="style_botton_return">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bottom_btn_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/btn_return</item>
    </style>
    
       <!-- 通话记录界面底部按钮风格 -->
    <style name="style_calllog_bottom_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bottom_btn_selector</item>
    </style>
        
</resources>
