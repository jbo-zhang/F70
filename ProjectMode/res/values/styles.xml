<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
        <style name="MyTheme" parent="android:Theme.NoTitleBar">
    </style>
    
        
        <!-- 底部返回键的风格 -->
    <style name="style_botton_return">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bottom_btn_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/btn_return</item>
    </style>
    
       <!-- 通话记录界面底部按钮风格 -->
    <style name="style_calllog_bottom_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bottom_btn_selector</item>
    </style>
        
</resources>
